@using TexStyle.ViewModels
@model TexStyle.ViewModels.YD.ReprocessRecipeViewModel

@{
    ViewData["Title"] = "Add New Process Recipe";

    List<SelectListItem> RecipeList = ViewBag.recipeList;


}

<form asp-area="YarnDyeing" asp-controller="Recipe" asp-action="AddOrUpdateReprocess" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">

        <div class="form-group">
                <label class="control-label" asp-for="RecipeId"></label>
                <select asp-for="RecipeId" select2="@(RecipeList)" select2-ph="Select Recipe" class="form-control select2"></select>
            <span asp-validation-for="RecipeId" class="text-danger"></span>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
    </div>

</form>