                                        <tr role="row">
                                            <td class="sorting_1">@c.Id</td>
                                            <td class="sorting_2">@c.Name</td>
                                            <td class="sorting_3">@c.Rate</td>
                                            <td><input type="checkbox" onclick="submit(this)" value="true" @{var isChecked = c.Selected == true ? "checked" : ""; } @isChecked></td>
