@model IEnumerable<Sticker>

@{
    var title = $"Sticker";
    ViewData["Title"] = $"{title}s";
    var AddOrUpdateAction = "/yd/Sticker/AddOrUpdate/";
    var DeleteAction = "/yd/Sticker/Delete/";
    var Sticker_D4Report = "/yd/Sticker/Sticker_D4Report/";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>@title Management</h5>
                @*@if (User.Claims.Any(x => x.Value == AccountClaimKeys.CS_SETTINGS_CHEMICALS_CREATE))
                {*@<button href="#@AddOrUpdateAction" class="btn btn-primary create-js" data-action="#@AddOrUpdateAction" data-title="Create @title">ADD NEW</button>
            </div>
            <div class="card-block">
                <div class="dt-responsive table-responsive">
                    <div id="simpletable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="">
                            <div class="col-xs-12 col-sm-12">
                                <table id="BrandsTable" class="table table-striped table-bordered nowrap dataTable" role="grid" aria-describedby="simpletable_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc">No</th>
                                            <th class="sorting_asc">LPS No</th>
                                            <th class="sorting">No of Cons</th>
                                            <th class="sorting">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var c in Model.OrderBy(c => c.Id))
                                        {
                                        <tr role="row">
                                            <td class="sorting_3">@c.Id</td>
                                            <td class="sorting_3">@c.LPSId</td>
                                            <td class="sorting_3">@c.Cons</td>
                                            <td style="width:150px;">
                                                <a href="@Sticker_D4Report@c.LPSId" class="btn btn-outline-secondary">Print Stickers</a>
                                                <butto type="button" class="btn btn-primary update-js" data-action="#@AddOrUpdateAction@c.Id" data-title="Update @title">Edit</butto>
                                                <button disabled class="btn btn-danger item-delete-btn" data-delete-url="@DeleteAction@c.Id">Delete</button>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr role="row">
                                            <th class="sorting_asc">No</th>
                                            <th class="sorting_asc">LPS No</th>
                                            <th class="sorting">No of Cons</th>
                                            <th class="sorting">Actions</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



@section scripts{
    <script>
        var modal = "#adminModal";
    </script>
}
