@model IEnumerable<Costing>

@{
    var title = $"Costing";
    ViewData["Title"] = $"{title}s";
    var AddOrUpdateAction = "/yd/Costing/AddOrUpdate/";
    var DeleteAction = "/yd/Costing/Delete/";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>@title Management</h5>
                @if (User.Claims.Any(x => x.Value == AccountClaimKeys.YD_SETTINGS_COSTING_CREATE)){<button href="#@AddOrUpdateAction" class="btn btn-primary create-js" data-action="#@AddOrUpdateAction" data-title="Create @title">ADD NEW</button>}
            </div>
            <div class="card-block">
                <div class="dt-responsive table-responsive">
                    <div id="simpletable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="">
                            <div class="col-xs-12 col-sm-12">
                                <table id="BrandsTable" class="table table-striped table-bordered nowrap sdataTable" role="grid" aria-describedby="simpletable_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting">Actions</th>
                                            <th class="sorting_asc">Month</th>
                                            <th class="sorting_asc">Electricity</th>
                                            <th class="sorting">Gas</th>
                                            <th class="sorting">SalaryAndWage</th>
                                            <th class="sorting">FurnaceCharges</th>
                                            <th class="sorting">MIS</th>
                                            <th class="sorting">ExportQuantity</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var c in Model)
                                        {
                                        <tr role="row">
                                            <td style="width:150px;">
                                                <button type="button" class="btn btn-primary update-js" data-action="#@AddOrUpdateAction@c.Id" data-title="Update @title">Edit</button>
                                                <button disabled class="btn btn-danger item-delete-btn" data-delete-url="@DeleteAction@c.Id">Delete</button>
                                            </td>
                                            <td class="sorting_1">@c.Date.ToString("MMM yyyy")</td>
                                            <td class="sorting_2">@c.Electricity</td>
                                            <td class="sorting">@c.Gas</td>
                                            <td class="sorting">@c.SalaryAndWage</td>
                                            <td class="sorting">@c.FurnaceCharges</td>
                                            <td class="sorting">@c.MIS</td>
                                            <td class="sorting">@c.ExportQuantity</td>

                                        </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr role="row">
                                            <th class="sorting">Actions</th>
                                            <th class="sorting_asc">Month</th>
                                            <th class="sorting_asc">Electricity</th>
                                            <th class="sorting">Gas</th>
                                            <th class="sorting">SalaryAndWage</th>
                                            <th class="sorting">FurnaceCharges</th>
                                            <th class="sorting">MIS</th>
                                            <th class="sorting">ExportQuantity</th>

                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



@section scripts{
    <script>
        var modal = "#igpModal";
    </script>
}
