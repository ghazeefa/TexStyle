@model IEnumerable<TexStyle.Core.PPC.OutwardGatePass>
@{
    var title = $"Outward Gate Pass";
    ViewData["Title"] = $"{title}es";
    var AddOrUpdateAction = "/marketingaccounts/OGPInvoice/AddOrUpdate/";
