                <div class="dt-responsive table-responsive">
                    <div id="simpletable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="">
                            <div class="col-xs-12 col-sm-12">
                                <table id="BrandsTable" class="table table-striped table-bordered nowrap sdataTable" role="grid" aria-describedby="simpletable_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc">OGP No</th>
                                            <th class="sorting">Party</th>
                                            <th class="sorting">Invoice No</th>
                                            <th class="sorting">Invoice Amount</th>
                                            <th class="sorting">Invoice Description</th>
                                            <th class="sorting">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var c in Model)
                                        {
                                            <tr role="row">
                                                <td class="sorting_1">@c.Id</td>
                                                <td class="sorting_3">@c.Party?.Name</td>
                                                <td class="sorting_3">@c.InvoiceNo</td>
                                                <td class="sorting_3">@c.InvoiceAmount</td>
                                                <td class="sorting_3">@c.InvoiceDescription</td>
                                                <td style="width:150px;">
                                                    @*<a href="@OGPDetailReportAction@c.Id" class="btn btn-outline-secondary">OGP Detail Report</a>
