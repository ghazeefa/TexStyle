@model IEnumerable<TexStyle.Core.Gate.GateTr>
@{
    var title = $"OGP Loan Dye & Chemical Tr";
    ViewData["Title"] = $"{title}es";
    var AddOrUpdateAction = "/gate/GateOGPLoanDyesChemical/AddOrUpdate/";
    var AddDetailsAction = "/gate/GateOGPLoanDyesChemical/Details/";
    var GateOGPLoanDyesChemicalDetailReport = "/gate/GateOGPLoanDyesChemical/GateOGPLoanDyesChemicalDetailReport/";
    //    var DeleteAction = "/cs/InterUnit/Delete/";

}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>@title Management</h5>
                @if (User.Claims.Any(x => x.Value == AccountClaimKeys.GATE_OGP_LOAN_DYES_AND_CHEMICAL_CREATE)){<button href="#@AddOrUpdateAction" class="btn btn-primary create-js" data-action="#@AddOrUpdateAction" data-title="Create @title">ADD NEW </button>}
            </div>
            <div class="card-block">
                <div class="dt-responsive table-responsive">
                    <div id="simpletable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="">
                            <div class="col-xs-12 col-sm-12">
                                <table id="BrandsTable" data-order="[[ 2, &quot;asc&quot; ]]" class="table table-striped table-bordered nowrap sdataTable" role="grid" aria-describedby="simpletable_info">
                                    <thead>
                                        <tr role="row">
                                            <th>Actions</th>
                                            <th>Tr No</th>
                                            <th>Tr Date</th>
                                            <th>Xref</th>
                                            <th>Party</th>
                                            <th>Gate Tr Type</th>
                                            <th>Driver Name</th>
                                            <th>Vehicle No</th>
                                            <th>NIC No</th>
                                            <th>Employee No</th>
                                            <th>OGP Reff No</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var c in Model)
                                        {
                                        <tr role="row">
                                            <td style="width:150px;">
                                                <a href="@GateOGPLoanDyesChemicalDetailReport@c.Id" class="btn btn-outline-secondary">OGP Detail Report</a>
                                                <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-primary ">Details</a>
                                                @if (User.Claims.Any(x => x.Value == AccountClaimKeys.GATE_OGP_LOAN_DYES_AND_CHEMICAL_EDIT))
                                                {<button type="button" class="btn btn-primary update-js" data-action="#@AddOrUpdateAction@c.Id" data-title="Update @title">Edit</button>}
                                                @*<button type="button" class="btn btn-primary update-js" data-action="#@AddDetailsAction@c.Id" data-title="Detail @title">Details</button>
        @if (User.Claims.Any(x => x.Value == AccountClaimKeys.Something)){<button class="btn btn-danger item-delete-btn" data-delete-url="@DeleteAction@c.Id">Delete</button>}*@
                                            </td>

                                            <td>@c.Sno</td>
                                            <td>@c.Date.ToString("dd MMM yyyy")</td>
                                            <td>@c.GetDyeChemicalTr.Sno</td>
                                            <td>@c.Party?.Name</td>
                                            <td>@c.GateActivityType?.Name</td>
                                            <td>@c.DriverName</td>
                                            <td>@c.VehicleNo</td>
                                            <td>@c.NICNo</td>
                                            <td>@c.EmpNo</td>
                                            <td>@c.IGPReffNo</td>

                                        </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr role="row">
                                            <th>Actions</th>
                                            <th>Tr No</th>
                                            <th>Tr Date</th>
                                            <th>Xref</th>
                                            <th>Party</th>
                                            <th>Gate IGP Type</th>
                                            <th>Driver Name</th>
                                            <th>Vehicle No</th>
                                            <th>NIC No</th>
                                            <th>Employee No</th>
                                            <th>OGP Reff No</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts{
    <script>
        var modal = "#igpModal";
    </script>
}
