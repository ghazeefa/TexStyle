<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>@title Details</h5>
                @if (Model.GateTrId == null)
                {<button class="btn btn-primary create-js" data-action="@(AddOrUpdateAction)?ParentId=@(Model.Id)" data-title="Create @title Detail">ADD NEW</button>
                }
            </div>
            <div class="card-block">
                <div class="dt-responsive table-responsive">
                    <div id="simpletable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="">
                            <div class="col-xs-12 col-sm-12 m-dT">
                                @*dataTable*@
                                <table id="IGPDetailsTable" class="table table-striped table-bordered nowrap dataTable" role="grid" aria-describedby="simpletable_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc">No</th>
                                            @if (Model.GateActivityTypeId == 1)
                                            {
                                                <th class="sorting">YarnType</th>

                                            }
                                            else  
                                            {

                                                <th class="sorting">FabricType</th>

                                                @*<th class="sorting">Dye</th>*@
                                            }
                                            <th class="sorting">Debit</th>
                                            @*<th class="sorting">Credit</th>*@

                                            @if (Model.GateActivityTypeId == 1)
                                            {
                                                <th class="sorting">Bags</th>

                                            }
                                            else 
                                            {

                                        <th class="sorting">No Of Rolls</th>

                                                @*<th class="sorting">Dye</th>*@
                                            }


                                            
                                            <th class="sorting">Description</th>
                                            <th class="sorting">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var c in Model.GateTrDetails.Where(x => !x.IsDeleted))
                                        {
                                        <tr role="row">
                                            <td class="sorting_asc">@c.Id</td>
                                            @if (Model.GateActivityTypeId == 1)
                                            {
                                                <td class="sorting_asc">@c.YarnType?.Name</td>
                                            }
                                            else
                                            {
                                                <td class="sorting_asc">@c.FabricTypes?.Name</td>
                                             
                                            }
                                            <td class="sorting_asc">@c.QtyDr</td>
                               

                                            @if (Model.GateActivityTypeId == 1)
                                            {
                                        <td class="sorting_asc">@c.Bags</td>

                                            }
                                            @if (Model.GateActivityTypeId != 1 )
                                            {

                                        <td class="sorting_asc">@c.NoOfRolls</td>

                                                @*<th class="sorting">Dye</th>*@
                                            }


                                          
                                            <td class="sorting_asc">@c.Description</td>
                                            <td style="width:150px;">
                                                <button type="button" class="btn btn-primary update-js" data-action="#@(AddOrUpdateAction)@(c.Id)/?ParentId=@(Model.Id)" data-title="Update @title">Edit</button>
                                                <button disabled class="btn btn-danger item-delete-btn" data-delete-url="@(DeleteAction)@(c.Id)">Delete</button>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr role="row">
                                            <th class="sorting_asc">No</th>
                                            @if (Model.GateActivityTypeId == 1)
                                            {
                                                <th class="sorting">YarnType</th>

                                            }
                                            else
                                            {

                                                <th class="sorting">FabricType</th>

                                                @*<th class="sorting">Dye</th>*@
                                            }
                                            <th class="sorting">Debit</th>
                                    

                                            @if (Model.GateActivityTypeId == 1)
                                            {
                                                <th class="sorting">Bags</th>

                                            }
                                     else
                                            {

                                                <th class="sorting">No of Rolls</th>

                                                @*<th class="sorting">Dye</th>*@
                                            }



                                            <th class="sorting">Description</th>
                                            <th class="sorting">Actions</th>
                                        </tr>
                                        </tr>
                                    </tfoot>
                                </table>
