@model IEnumerable<TexStyle.Core.PPC.InwardGatePassDetail>
@{
    var title = $"PPC Planning";
}

<div class="col-sm-12">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5>@title Details</h5>
            @*<button href="#@(AddOrUpdateAction)?igpId=@(Model.Id)" class="btn btn-primary create-js" data-action="#@(AddOrUpdateAction)?igpId=@(Model.Id)" data-title="Create @title">ADD NEW</button>*@
        </div>
        <div class="card-block">
            <div class="dt-responsive table-responsive">
                <div id="simpletable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="">
                        <div class="col-xs-12 col-sm-12 m-dT">
                            @*<input type="hidden" id="refYarnManufacturerId" value="@Model.YarnManufacturerId" />
                            <input type="hidden" id="refYarnQualityId" value="@Model.YarnQualityId" />
                            <input type="hidden" id="refYarnTypeId" value="@Model.YarnTypeId" />*@
                            @*dataTable*@

                            @*dataTable*@
                            <table id="PPCTable" class="table table-striped table-bordered sdataTable" role="grid" aria-describedby="simpletable_info">

                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc">IGPDetailNo</th>
                                        <th class="sorting">Lot No</th>


                                        @if (Model.FirstOrDefault().FabricTypesId == null)
                                        {
                                            <th class="sorting">Yarn Type</th>
                                            <th class="sorting">Yarn Quality</th>
                                            <th class="sorting">Yarn Manufacturer</th>
                                         
                                        }
                                        else
                                        {
                                            <th class="sorting">Fabric Type</th>
                                       
                                            <th class="sorting">Knitter</th>
                                            <th class="sorting">Dia</th>
                                            <th class="sorting">GSM</th>
                                          

                                        }


    
                                        <th class="sorting">Net Kgs</th>
                                        <th class="sorting"> Available Kgs</th>
                                        <th class="sorting">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var c in Model)
                                    {
                                    <tr role="row">
                                        <td class="sorting_1">@c.Id</td>
                                        <td class="sorting_1" style="width:10px;">@c.LotNo <input type="hidden" name="@nameof(c.LotNo)" value="@c.LotNo" /></td>



                                        @if (c.FabricTypesId == null)
                                        {
                                           
                                        <td class="sorting_1">@c.YarnType?.Name <input type="hidden" name="@nameof(c.YarnTypeId)" value="@c.YarnTypeId" /></td>
                                        <td class="sorting_1">@c.YarnQuality.Name <input type="hidden" name="@nameof(c.YarnQualityId)" value="@c.YarnQualityId" /></td>
                                        <td class="sorting_5">@c.YarnManufacturer?.Name <input type="hidden" name="@nameof(c.YarnManufacturerId)" value="@c.YarnManufacturerId" /></td>
                                        }
                                        else
                                        {
                                            <td class="sorting_1">@c.FabricTypes?.Name <input type="hidden" name="@nameof(c.FabricTypesId)" value="@c.FabricTypesId" /></td>
                                            @*<td class="sorting_1">@Model.FabricQuality.Name <input type="hidden" name="@nameof(Model.FabricQualityId)" value="@Model.FabricQualityId" /></td>*@
                                            <td class="sorting_5">@c.knittingParty?.Name <input type="hidden" name="@nameof(c.KnitingPartyId)" value="@c.KnitingPartyId" /></td>
                                            <td class="sorting_5">@c.Dia <input type="hidden" name="@nameof(c.Dia)" value="@c.Dia" /></td>
                                            <td class="sorting_5">@c.GSM <input type="hidden" name="@nameof(c.GSM)" value="@c.GSM" /></td>
         



                                        }



                                        <td class="sorting_1">@c.NetWeightInKg</td>
                                        <td class="sorting_7" style="width:10px;">
                                            @c.AvailableLpsKgs

                                            <input type="hidden" name="Kgs" value="@c.AvailableLpsKgs" />
                                            <input type="hidden" id="@nameof(c.AvailableLpsKgs)" name="@nameof(c.AvailableLpsKgs)" value="@c.AvailableLpsKgs" />

                                        </td>
                                        <td style="width:150px;">
                                            <button type="button" class="btn btn-primary copy-js" data-action="#" data-title="Copy @title">Copy This</button>
                                        </td>
                                    </tr>
                                    }
                                    </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
