@model TexStyle.Core.PPC.FactoryPo
@{
    ViewData["Title"] = "IGP Report";

    var noData = "No Data Available";
}
<style>
    @@media print {
        .m-grid {
            margin-left: 50px;
        }

        .h {
            background-color: white;
        }

        .d {
            padding-left: 30px;
        }

        .card .card-block {
            /*        border: 1px solid black;
            border-top: 2px solid black;*/
            margin-top: -64px;
        }

            .card .card-block .s .d {
                padding-right: 60px;
            }
