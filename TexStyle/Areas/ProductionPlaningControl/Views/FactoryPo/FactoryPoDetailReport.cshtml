            }*/
    }

    .m .c {
        padding-left: 50px;
    }

    table, td, th {
        border: 1px solid black;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    #span01 {
        display: inline-block;
    }

    #span02 {
        display: inline-block;
