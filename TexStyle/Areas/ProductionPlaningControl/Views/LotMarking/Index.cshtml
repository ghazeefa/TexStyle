@model IEnumerable<TexStyle.Core.PPC.LotMarking>

@{ var title = $"LotMarking";
    ViewData["Title"] = $"{title}s";
    var AddOrUpdateAction = "/ppc/LotMarking/AddOrUpdate/";
    var GetLotNumberAction = "/ppc/LotMarking/GetIssunaceDocument/";
    var DeleteAction = "/ppc/knittingParty/Delete/";
    var IssuanceReport = "/ppc/Reports/P9IssunaceRecordReport/";


    Layout = "_Layout"; }

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>@title Management</h5>
                @*<button href="@IssuanceReport" class="btn btn-outline-secondary">Lot Issuance Document</button>
                <button href="#@AddOrUpdateAction" class="btn btn-primary create-js" data-action="#@AddOrUpdateAction" data-title="Create @title">ADD NEW</button>
                <button href="#@IssuanceReport" class="btn btn-primary create-js">Lot Issuance Document</button>*@

            </div>
            <div class="card-header d-flex justify-content-between align-items-center">
          
                @*<a href="@IssuanceReport" class="btn btn-default ">Lot Issuance Report</a>*@
                <a href="@GetLotNumberAction" class="btn btn-default ">Lot Issuance Document</a>
                
        <button data-action="#@AddOrUpdateAction" href="#@AddOrUpdateAction" class="btn btn-primary create-js" data-title="Create @title">ADD NEW</button>
            </div>
            <div class="card-block">
                <div class="dt-responsive table-responsive">
                    <div id="simpletable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="">
                            <div class="col-xs-12 col-sm-12">
                                <table id="BrandsTable" class="table table-striped table-bordered nowrap dataTable" role="grid" aria-describedby="simpletable_info">
                                    <thead>
                                        <tr role="row">
                                            @*<th class="sorting_desc">RollNo</th>*@
                                            <th class="sorting_asc">LPSNo</th>
                                            <th class="sorting_asc">IssuanceDate</th>
                                            <th class="sorting_asc">TotalKgs</th>
                                            @*<th class="sorting_asc">Total No of Rolls</th>*@
                                            <th class="sorting_asc">IsIssued?</th>

                                            @*<th class="sorting">Actions</th>*@
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var c in Model)
                                        {
                            <tr role="row">
                                @*<td class="sorting_1">@c.RollNo</td>*@
                                <td class="sorting_1">@c.PPCPlanningId</td>
                                <td class="sorting_1">@c.IssuanceDate</td>
                                <td class="sorting_1">@c.Kgs</td>
                                @*<td class="sorting_1">@c.NoOfRolls</td>*@
                                <td class="sorting">
                                    <div class="border-checkbox-section">
                                        <div class="row">
                                            <div class="col-12 border-checkbox-group border-checkbox-group-primary">
                                                <input class="border-checkbox" type="checkbox" disabled="disabled" @{var isReturned = c.IsIssued == true ? "checked" : ""; } @isReturned>
                                                <label class="border-checkbox-label" for="IsReprocessed"> </label>
                                            </div>
                                        </div>
                                    </div>
                                </td>

                                @*<td style="width:150px;">

                                <button type="button" class="btn btn-primary update-js" data-action="#@AddOrUpdateAction@c.Id" data-title="Update @title">Edit</button>


                                <button disabled class="btn btn-danger item-delete-btn" data-delete-url="@DeleteAction@c.Id">Delete</button>

                            </td>*@
                            </tr>
}
                                    </tbody>
                                    <tfoot>
                                        <tr role="row">
                                            @*<th class="sorting_asc">RollNo</th>*@
                                            <th class="sorting_asc">LPSNo</th>
                                            <th class="sorting_asc">IssuanceDate</th>
                                            <th class="sorting_asc">TotalKgs</th>
                                            @*<th class="sorting_asc">TotaL No of Rolls</th>*@
                                            <th class="sorting_asc">IsIssued?</th>
                                            @*<th class="sorting">Actions</th>*@
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts{
    <script>var modal = "#adminModal";</script>
}

