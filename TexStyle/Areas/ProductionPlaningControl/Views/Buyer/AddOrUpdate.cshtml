@model TexStyle.ViewModels.PPC.BuyerViewModel

@{
    ViewData["Title"] = "Add Or Update";

    
    List<SelectListItem> partyList = ViewBag.partyList;
    var partySl = new SelectListItemViewModel {
        Name = "PartyId",
        PlaceHolder = "Select Party",
        UseDefault = false,
        SelectList = partyList
    };
}

<form asp-area="ProductionPlaningControl" asp-controller="Buyer" asp-action="AddOrUpdate" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(m => m.Id)

        <div class="form-group">
            <label class="control-label" asp-for="PartyId"></label>
            <select asp-for="PartyId" select2="@(partyList)" select2-ph="Select Party" class="form-control select2"></select>
            <span asp-validation-for="PartyId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>
</form>
