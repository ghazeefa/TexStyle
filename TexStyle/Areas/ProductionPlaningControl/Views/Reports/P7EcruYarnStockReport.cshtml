@model IEnumerable<TexStyle.ViewModels.PPC.Reports.P7EcruYarnStockReportViewModel>
@{
    ViewData["Title"] = "Ecru Yarn Stock Report";
    Layout = "_LayoutPrint";
    var noData = "No Data Available";
    var abc = @ViewBag.Message;
}


<style>
    .table-responsive {
        overflow-x: visible !important;
    }

    .borders > tbody > tr > td, .borders > thead > tr > td {
        border: 1px solid black !important;
        padding-top: 0px !important;
        padding-bottom: 0px !important;
        line-height: 15px !important;
    }
</style>
@if (Model.Count() > 0)
{


    <div class="card user-activity-card">
        @*<div class="card-header d-flex justify-content-between align-items-center no-print">
                <button class="btn btn-sm btn-info " onclick="window.print()"><i class="ti-printer"></i></button>
            </div>*@
        <div class="row">
            <div class="col-1 report-numberheading">P-7</div>
            <div class="col-11"></div>
        </div>
        <div class="card-block">
            <div class="w-100 text-center">
                <h3>COMFORT KNITWEARS (PVT.) LTD. (YARN DYEING DIV.)</h3>
                <h4>ECRU YARN Stock Summary REPORT </h4>
                <h6>  DATE FROM: @Model.FirstOrDefault().DateFrom TO: @Model.FirstOrDefault().DateTo</h6>
            </div>

            <div class="table-responsive">
                <table class="table table-responsive" style="line-height:5px; letter-spacing:1; font-family: 'Trebuchet MS','Lucida Grande', Arial, sans-serif; font-size:10px;">

                    <thead>
                        <tr class="report-detailheader">
                            <th width="10%">Date</th>
                            <th width="15%">Party</th>
                            <th width="6%">IGP</th>
                            <th width="10%">YarnType</th>
                            <th width="10%">YarnQuality</th>
                            <th width="15%">YarnManufacturer</th>
                            <th width="6%">Bags</th>
                            <th width="10%">NetKgs</th>
                            <th width="10%">PlannedKgs</th>
                            <th width="10%">ReturnedKgs</th>
                            <th width="10%">InStockKgs</th>

                            @*<th width="10%"></th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var grp in Model)
                        {
                        <tr>
                            <td colspan="14">

                                <strong>@grp.Date</strong>
                            </td>
                            <td colspan="14">

                            </td>
                        </tr>
                        @foreach (var detail in grp.P7EcruYarnStockReportDetailViewModel)
                        {

                    <tr>

                        <td>
                        </td>
                        <td>
                            @detail.Party
                        </td>
                        <td>
                            @detail.No
                        </td>
                        <td>
                            @detail.YarnType
                        </td>
                        <td>
                            @detail.YarnQuality
                        </td>
                        <td>
                            @detail.YarnManufacturer
                        </td>
                        <td>
                            @detail.Bags
                        </td>
                        <td>
                            @detail.NetKgs
                        </td>
                        <td>
                            @detail.DyedKgs
                        </td>

                        <td>
                            @detail.ReturnedKgs
                        </td>
                        <td>
                            @detail.InStockKgs
                        </td>




                    </tr>


                        }
                        }

                    </tbody>
                    <tfoot>
                        <tr>

                            <td colspan="5"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>





        </div>
    </div>
}
else
{
    <h1><center> No Record in Report </center></h1>
}
