@model IEnumerable<TexStyle.ViewModels.CS.Reports.DyeSummary_C1ViewModel>
@{
    ViewData["Title"] = "Stock Summary Report";
    Layout = "_LayoutPrint";

}


<style>
    .table-responsive {
        overflow-x: visible !important;
    }
</style>



@if (Model.Count() > 0)
{
    <div class="container">
        <div class="row">
            <div class="col-1 report-numberheading">D-1</div>
            <div class="col-11"></div>
        </div>
        <div class="row">
            <div class="col-12 report-header1">

                @Model.FirstOrDefault().CompanyName

            </div>
        </div>
        <div class="row">
            <div class="col-12 report-header2">
                @ViewData["Title"]
            </div>
        </div>
        <div class="row">
            <div class="col-12 report-header3">
                DATE FROM: @Model.FirstOrDefault().DateFrom TO: @Model.FirstOrDefault().DateTo
            </div>

        </div>
    </div>




    <div class="table-responsive">
        <table class="table table-responsive">

            <thead>
                <tr class="report-detailheader">
                    <th width="20%">Item</th>
                    <th width="20%">Name</th>
                    <th width="20%"></th>
                    <th width="20%">Balance</th>
                    <th width="20%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model)
                {
                    <tr>
                        <td colspan="1" class="report-detail-footer" style="font-size:large;">
                            @detail.Status
                        </td>
                        <td colspan="2" class="report-detail-footer"></td>
                        <td></td>
                        <td></td>
                    </tr>

                    @foreach (var d in detail.SummaryDetail)
                    {

                        <tr>

                            <td colspan="1" class="report-detail-footer"></td>
                            <td colspan="2" class="report-detail-footer">
                                @d.Name
                        </td>
                        <td colspan="2" class="report-detail-footer">
                            @d.Balance.ToString("0.000")
                        </td>
                     
                    </tr>
                }
                }

            </tbody>
            <tfoot>
                <tr>

                    <td colspan="5"></td>
                </tr>
            </tfoot>
        </table>
    </div>

}
else
{
    <h1><center> No Record in Report </center></h1>
}
