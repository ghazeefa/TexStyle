<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>@title Details</h5>
                <button href="@(AddOrUpdateAction)?trId=@(Model.Id)" class="btn btn-primary create-js" data-action="@(AddOrUpdateAction)?trId=@(Model.Id)" data-title="Create @title">ADD NEW</button>
            </div>
            <div class="card-block">
                <div class="dt-responsive table-responsive">
                    <div id="simpletable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="">
                            <div class="col-xs-12 col-sm-12 m-dT">
                                @*dataTable*@
                                <table id="IGPDetailsTable" class="table table-striped table-bordered nowrap sdataTable" role="grid" aria-describedby="simpletable_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc">Dye</th>
                                            <th class="sorting">Chemical</th>
                                            <th class="sorting">Qty Dr</th>
                                            <th class="sorting">Qty Cr</th>
                                            <th class="sorting">Packet</th>
                                            <th class="sorting">Rate</th>
                                            <th class="sorting">Amount</th>
                                            <th class="sorting">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var c in Model.DyeChemicalTrDetails.Where(x => x.IsDeleted == false))
                                        {
                                            <tr role="row">
                                                <td class="sorting_asc">@c.Dye?.Name</td>
                                                <td class="sorting">@c.Chemical?.Name</td>
                                                <td class="sorting">@c.QtyDr</td>
                                                <td class="sorting">@c.QtyCr</td>
                                                <td class="sorting_asc">@c.Packet</td>
                                                <td class="sorting">@c.Rate</td>
                                                <td class="sorting">@c.Amount</td>

                                                <td style="width:150px;">
                                                    @*<a asp-action="Details" class="btn btn-primary">Details</a>*@
                                                    @*<button type="button" class="btn btn-primary update-js" data-action="#@AddDetailsAction@c.Id" data-title="Detail @title">Details</button>*@
                                                    <button type="button" class="btn btn-primary update-js" data-action="#@(AddOrUpdateAction)@(c.Id)" data-title="Update @title">Edit</button>
                                                    <button disabled class="btn btn-danger item-delete-btn" data-delete-url="@(DeleteAction)@(c.Id)">Delete</button>
                                                    @*<button type="button" class="btn btn-primary update-js" data-action="#@(AddOrUpdateAction)@(c.Id)/?trId=@(Model.Id)" data-title="Update @title">Edit</button>*@
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr role="row">
                                            <th class="sorting_asc">Dye</th>
                                            <th class="sorting">Chemical</th>
                                            <th class="sorting">Qty Dr</th>
                                            <th class="sorting">Qty Cr</th>
                                            <th class="sorting">Packet</th>
                                            <th class="sorting">Rate</th>
                                            <th class="sorting">Amount</th>
                                            <th class="sorting">Actions</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-header d-flex  align-items-end">
                <h5 class="text-danger">Packets: @Model.DyeChemicalTrDetails.Where(x => !x.IsDeleted).Sum(x => x.Packet)</h5>

                <h5 class="text-success">
                    Qty:@{ var qty = Model.DyeChemicalTrDetails.Where(x => !x.IsDeleted).Sum(x => x.QtyCr) > 0 ? Model.DyeChemicalTrDetails.Where(x => !x.IsDeleted).Sum(x => x.QtyCr)
              : Model.DyeChemicalTrDetails.Where(x => !x.IsDeleted).Sum(x => x.QtyDr);} @qty
            </h5>


            <h5 class="text-info">
                Amount: @{ var Amount = Model.DyeChemicalTrDetails.Where(x => !x.IsDeleted).Sum(x => x.QtyCr) > 0 ?
           Model.DyeChemicalTrDetails.Where(x => !x.IsDeleted).Sum(x => x.QtyCr * x.Rate)
           : Model.DyeChemicalTrDetails.Where(x => !x.IsDeleted).Sum(x => x.QtyDr * x.Rate);} @Amount
            </h5>
            </div>
        </div>

    </div>
</div>
