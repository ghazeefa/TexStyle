@model IEnumerable<TexStyle.Core.CS.DyeChemicalTr>


@{
    var title = $"InterUnit Out tr";
    ViewData["Title"] = $"{title}";
    var AddOrUpdateAction = "/cs/InterUnitOutTr/AddOrUpdate/";
    var AddDetailsAction = "/cs/InterUnitOutTr/Details/";
    var InterUnitOutTrDetailReport = "/cs/InterUnitOutTr/InterUnitOutTrDetailReport/";
    //    var DeleteAction = "/cs/InterUnit/Delete/";

    Layout = "_Layout";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>@title Management</h5>
                @if (User.Claims.Any(x => x.Value == AccountClaimKeys.CS_INTER_UNIT_OUT_TR_CREATE))
                {<button href="#@AddOrUpdateAction" class="btn btn-primary create-js" data-action="#@AddOrUpdateAction" data-title="Create @title">ADD NEW </button>}
            </div>
            <div class="card-block">
                <div class="dt-responsive table-responsive">
                    <div id="simpletable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="">
                            <div class="col-xs-12 col-sm-12">
                                <table id="BrandsTable" data-order="[[ 2, &quot;asc&quot; ]]" class="table table-striped table-bordered nowrap dataTable" role="grid" aria-describedby="simpletable_info">
                                    <thead>
                                        <tr role="row">
                                            <th>Is Cancel ?</th>
                                            <th>Tr No</th>
                                            <th>Tr Date</th>
                                            @*<th>IGP No</th>*@
                                            <th>Party</th>
                                            <th>Fare Amount</th>
                                            <th>OGP Reff No</th>
                                            @*<th>Invoice No</th>
        <th>Invoice Date</th>*@
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var c in Model)
                                        {
                                        <tr role="row">
                                            <td class="sorting">
                                                <div class="border-checkbox-section">
                                                    <div class="row">
                                                        <div class="col-12 border-checkbox-group border-checkbox-group-primary">
                                                            <input class="border-checkbox" type="checkbox" disabled="disabled" style="color:red" @{var isCancel = c.IsCancel == true ? "checked" : ""; } @isCancel>
                                                            <label class="border-checkbox-label" for="IsCancel"> </label>
                                                        </div>
                                                    </div>



                                                </div>
                                            <td>@c.Sno</td>
                                            <td>@c.TransactionDate.ToString("dd MMM yyyy")</td>
                                            @*<td>@c.IgpOgpNo</td>*@
                                            <td>@c.Party?.Name</td>
                                            <td>@c.FairPrice</td>
                                            <td>@c.IGPReffNo</td>
                                            @*<td>@c.InvoiceNo</td>
        <td>@c.InvoiceDate?.ToString("dd MMM yyyy")</td>*@
                                            <td style="width:150px;">
                                                <a href="@InterUnitOutTrDetailReport@c.Id" class="btn btn-outline-secondary">IGP Detail Report</a>
                                                <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-primary">Details</a>
                                                @if (User.Claims.Any(x => x.Value == AccountClaimKeys.CS_INTER_UNIT_OUT_TR_EDIT))
                                                {
                                        <button type="button" class="btn btn-primary update-js" data-action="#@AddOrUpdateAction@c.Id" data-title="Update @title">Edit</button> } @*<button type="button" class="btn btn-primary update-js" data-action="#@AddDetailsAction@c.Id" data-title="Detail @title">Details</button>
    @if (User.Claims.Any(x => x.Value == AccountClaimKeys.Something)){<button class="btn btn-danger item-delete-btn" data-delete-url="@DeleteAction@c.Id">Delete</button>}*@
                                            </td>

                                        </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr role="row">
                                            <th>Is Cancel ?</th>
                                            <th>Tr No</th>
                                            <th>Tr Date</th>
                                            @*<th>IGP No</th>*@
                                            <th>Party</th>
                                            <th>Fare Amount</th>
                                            <th>IGP Reff No</th>
                                            @*<th>Invoice No</th>
        <th>Invoice Date</th>*@
                                            <th class="sorting">Actions</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>