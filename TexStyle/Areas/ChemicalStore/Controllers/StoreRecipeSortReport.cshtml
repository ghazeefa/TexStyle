@model IEnumerable<TexStyle.ViewModels.CS.Reports.StoreRecipeSortReport_ViewModel>
@{
    ViewData["Title"] = "Dyeing Recipe Sorting Report";
    Layout = "_LayoutPrint";

}


<style>
    .table-responsive {
        overflow-x: visible !important;
    }
</style>



@if (Model.Count() > 0)
{
    <div class="container">
        <div class="row">
            <div class="col-1 report-numberheading">D-3</div>
            <div class="col-11"></div>
        </div>
        <div class="row">
            <div class="col-12 report-header1">

                @Model.FirstOrDefault().CompanyName

            </div>
        </div>
        <div class="row">
            <div class="col-12 report-header2">
                @ViewData["Title"]
            </div>
        </div>
        <div class="row">
            <div class="col-12 report-header3">
                DATE FROM: @Model.FirstOrDefault().DateFrom TO: @Model.FirstOrDefault().DateTo
            </div>

        </div>
    </div>




    <div class="table-responsive">
        <table class="table table-responsive">

            <thead>
                <tr class="report-detailheader">
                    <th width="35%">Date</th>
                    <th width="35%">Recpie Id</th>
                    <th width="35%">LPS</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model)
                {
                    <tr style="height: 10px; letter-spacing: 2px; border: 1px solid black; line-height: 50px;">
                        <td colspan="1" class="report-detail-footer" style="font-size:large;">
                            @detail.Date.ToString("MM-dd-yyyy")
                        </td>
                        <td colspan="2" class="report-detail-footer"></td>
                        <td></td>
                        <td></td>
                    </tr>

                    @foreach (var d in detail.StoreRecipeSortReportDetail_ViewModel)
                    {

                        <tr style="height: 10px; letter-spacing: 2px; border: 1px solid black; line-height: 50px;">

                            @*<td colspan="1" class="report-detail-footer"></td>*@
                            <td colspan="2" class="report-detail-footer">
                                @d.No
                            </td>
                            <td>
                                @d.LPSId
                            </td>

                        </tr>
                    }
                }

            </tbody>
            <tfoot>
                <tr>

                    <td colspan="5"></td>
                </tr>
            </tfoot>
        </table>
    </div>

}
else
{
    <h1><center> No Record in Report </center></h1>
}
